<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signUpActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:padding="16dp"
    android:background="@color/lightBackground"
    app:layoutDescription="@xml/activity_sign_up_scene"
    tools:context=".screen.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <!-- Sign Up Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:fontFamily="@font/fugazOneRegular"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

        <!-- User Name Field with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/suUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/user_name"
                android:inputType="textPersonName"
                android:textColor="@color/black20"
                android:textColorHint="@color/black80"
                android:paddingHorizontal="6dp"
                android:minHeight="48dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_person_24"
                android:contentDescription="@string/user_icon"
                app:tint="@android:color/black" />
        </LinearLayout>

        <!-- Email Field with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/suEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black20"
                android:textColorHint="@color/black80"
                android:paddingHorizontal="6dp"
                android:minHeight="48dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_email_24"
                android:contentDescription="@string/email_icon"
                app:tint="@android:color/black" />
        </LinearLayout>

        <!-- Password Field with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/suPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/black20"
                android:textColorHint="@color/black80"
                android:paddingHorizontal="6dp"
                android:minHeight="48dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:id="@+id/suPasswordToggle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_visibility_24"
                android:contentDescription="@string/password_eye_icon"
                app:tint="@android:color/black"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Phone Number Field with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/suPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/phone_number"
                android:inputType="text|phone"
                android:textColor="@color/black20"
                android:textColorHint="@color/black80"
                android:paddingHorizontal="6dp"
                android:minHeight="48dp"
                android:background="@android:color/transparent" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_phone_android_24"
                android:contentDescription="@string/phone_icon"
                app:tint="@android:color/black" />
        </LinearLayout>

        <!-- Date of Birth Field with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/suDateOfBirth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/date_of_birth"
                android:textColor="@color/black20"
                android:textColorHint="@color/black80"
                android:paddingHorizontal="6dp"
                android:minHeight="48dp"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:clickable="true" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_edit_calendar_24"
                android:contentDescription="@string/calender_icon"
                app:tint="@android:color/black" />
        </LinearLayout>

        <!-- Gender DropDown -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_border"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="16dp">
        <Spinner
            android:id="@+id/suGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_gender"
            android:textColor="@color/black20"
            android:textColorHint="@color/black80"
            android:paddingHorizontal="6dp"
            android:minHeight="48dp" />
        </LinearLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/suBtnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:layout_marginTop="16dp"
            android:height="64dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background" />

        <!-- Already Have an Account -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_an_account"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/robotoRegular" />

            <TextView
                android:id="@+id/suSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in_underline"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:focusable="true"
                android:clickable="true"
                android:fontFamily="@font/robotoRegular" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>