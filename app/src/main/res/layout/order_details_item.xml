<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp"
    app:cardCornerRadius="12dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <!--    Product Name     -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:layout_marginBottom="4dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/name"
                        android:textColor="@color/black20"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/odProductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black20"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginBottom="4dp" >

                    <!--    Product Price     -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_columnWeight="1"
                        android:paddingHorizontal="12dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/price"
                            android:textColor="@color/black20"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/odProductPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black20"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!--    Product Quantity     -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_columnWeight="1"
                        android:paddingHorizontal="12dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/quantity"
                            android:textColor="@color/black20"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/odProductQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black20"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginBottom="4dp" >

                    <!--    Product Size     -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_columnWeight="1"
                        android:paddingHorizontal="12dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/size"
                            android:textColor="@color/black20"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/odProductSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black20"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!--    Product Color     -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_columnWeight="1"
                        android:paddingHorizontal="12dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/color"
                            android:textColor="@color/black20"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/odProductColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black20"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:layout_marginBottom="4dp" >

                    <!--    Product Total Price     -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_columnWeight="1"
                        android:paddingHorizontal="12dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total"
                            android:textColor="@color/black20"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/odProductTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black20"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!--    Product Status    -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_columnWeight="1"
                        android:paddingHorizontal="12dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/status"
                            android:textColor="@color/black20"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/odProductStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black20"
                            android:textStyle="bold"
                            android:textSize="14sp" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>

            <!--    Product Image     -->
            <ImageView
                android:id="@+id/odProductImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_image"
                android:contentDescription="@string/order_image"
                android:clipToOutline="true" />

        </LinearLayout>
        <!-- Review Button -->
        <Button
            android:id="@+id/odBtnRankVendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_review"
            android:layout_marginTop="8dp"
            android:height="32dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:visibility="gone" />
    </LinearLayout>
</androidx.cardview.widget.CardView>